<?xml version="1.0" encoding="utf-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        id="cordova-screen-guard"
        version="1.1.0">

    <name>Screen Guard</name>
    <description>Prevents screenshots on Android and detects screen capture events on iOS.</description>

    <js-module src="www/ScreenGuard.js" name="ScreenGuard">
        <clobbers target="ScreenGuard" />
    </js-module>

    <platform name="ios">
        <source-file src="src/ios/ScreenGuard.m" />
    </platform>

    <platform name="android">
        <source-file src="src/android/ScreenGuard.java" target-dir="src/cordova/plugin/screenguard" />
    </platform>

</plugin>
